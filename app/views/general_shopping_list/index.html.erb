<div class="shopping">
  <h1>Shopping List</h1>

  <div class="totals">
    <p>Total Items To buy: <strong> <%= @foods.count %> </strong></p>
    <p>Total Amount: $<strong> <%= @prices %> </strong></p>
  </div>

  <table class="foods-table" border="1">
    <tr>
      <th>Food</th>
      <th>Measurement Unit</th>
      <th>Unit Price</th>
      <th>Quantity</th>
    </tr>
  <% @foods.each do |food| %>
    <tr>
      <td><%= food.name %></td>
      <td><%= food.measurement_unit %></td>
      <td><%= food.price %></td>
      <td><%= food.quantity %></td>
    </tr>
  <% end %>
  </table>
</div>
